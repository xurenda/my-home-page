 @import './variables'

/* CSS Reset */
body
  font-family -apple-system, "Noto Sans", "Helvetica Neue", Helvetica, "Nimbus Sans L", Arial, "Liberation Sans", "PingFang SC", "Hiragino Sans GB", "Noto Sans CJK SC", "Source Han Sans SC", "Source Han Sans CN", "Microsoft YaHei", "Wenquanyi Micro Hei", "WenQuanYi Zen Hei", "ST Heiti", SimHei, "WenQuanYi Zen Hei Sharp", sans-serif
  font-size $font-size
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color $font-color
  line-height 1.5em
  background-color $background-color-1
  overflow-x hidden
  margin 0
  min-width $container-width + 100px
  min-height 100vh
a
  color $font-color
  text-decoration none
h1
h2
h3
h4
h5
h6
  margin 0
  color $title-color
  font-weight 300
  line-height 1.5rem
h1
  font-size 2rem
h2
  font-size 2rem
h3
  font-size 1.17rem
h4
  font-size 1rem
h5
  font-size 0.83rem
h6
  font-size 0.67rem
p
  margin 0
  line-height 1.5em
ul
  padding 0
li
  list-style none
input
textarea
button
  all reset
*::placeholder
  color $placeholder-color
  font-weight 400

/* 功能类 */

// 容器
.container
  width $container-width
  margin 0 auto
  text-align center
  padding 100px 0

// 小分割线
.cut-line
  display inline-block
  height 3px
  width 50px
  margin 26px 0
  background-color $main-fore-color